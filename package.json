{
  "name": "posemetre-pro-native",
  "version": "1.3.0",
  "description": "Posemetre Pro Native - Application iOS & Android pour photographes (Capacitor)",
  "main": "index.html",
  "scripts": {
    "test": "vitest run",
    "test:watch": "vitest",
    "dev": "npx http-server -p 8000 -c-1",
    "start": "npx http-server -p 8000 -c-1",
    "serve": "npx http-server -p 3000 -c-1",
    "build": "echo 'No build step needed - vanilla JS PWA'",
    "prebuild": "npm run validate",
    "validate": "echo 'Validating PWA...' && node scripts/validate-pwa.js || true",
    "ionic:serve": "npx http-server -p 8100",
    "ionic:build": "echo 'No build needed for vanilla JS'",
    "build:native": "pwsh -ExecutionPolicy Bypass -File scripts/build-native.ps1 all",
    "build:native:bash": "bash scripts/build-native.sh all",
    "build:ios": "pwsh -ExecutionPolicy Bypass -File scripts/build-native.ps1 ios",
    "build:ios:bash": "bash scripts/build-native.sh ios",
    "build:android": "pwsh -ExecutionPolicy Bypass -File scripts/build-native.ps1 android",
    "build:android:bash": "bash scripts/build-native.sh android",
    "cap:init": "npx cap init",
    "cap:add:ios": "npx cap add ios",
    "cap:add:android": "npx cap add android",
    "cap:sync": "npx cap sync",
    "cap:open:ios": "npx cap open ios",
    "cap:open:android": "npx cap open android",
    "cap:update": "npx cap update",
    "cap:run:ios": "npx cap run ios",
    "cap:run:android": "npx cap run android",
    "deploy:gh-pages": "gh-pages -d .",
    "lighthouse": "npx lighthouse http://localhost:8000 --output html --output-path ./lighthouse-report.html"
  },
  "keywords": [
    "photography",
    "light-meter",
    "flash-meter",
    "exposure",
    "pwa",
    "capacitor",
    "pwabuilder",
    "progressive-web-app"
  ],
  "author": "Laurent Suchet IG:@ono_sendai",
  "license": "MIT",
  "homepage": "https://github.com/OnoSendai13/posemetre-pro-native",
  "repository": {
    "type": "git",
    "url": "https://github.com/OnoSendai13/posemetre-pro-native.git"
  },
  "bugs": {
    "url": "https://github.com/OnoSendai13/posemetre-pro-native/issues"
  },
  "dependencies": {
    "@capacitor/android": "^5.7.8",
    "@capacitor/app": "^5.0.6",
    "@capacitor/cli": "^5.5.1",
    "@capacitor/core": "^5.5.1",
    "@capacitor/haptics": "^5.0.6",
    "@capacitor/ios": "^5.7.8",
    "@capacitor/keyboard": "^5.0.9",
    "@capacitor/preferences": "^5.0.8",
    "@capacitor/splash-screen": "^5.0.6",
    "@capacitor/status-bar": "^5.0.6"
  },
  "devDependencies": {
    "gh-pages": "^6.1.1",
    "http-server": "^14.1.1",
    "vitest": "^4.0.18"
  },
  "engines": {
    "node": ">=16.0.0"
  }
}
