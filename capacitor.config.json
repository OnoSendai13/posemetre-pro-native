{
  "appId": "com.onosendai.posemetrepro",
  "appName": "Posem√®tre Pro",
  "webDir": "www",
  "backgroundColor": "#1a1a1a",
  "server": {
    "androidScheme": "https",
    "iosScheme": "capacitor"
  },
  "ios": {
    "contentInset": "always",
    "scheme": "PosemetrePro",
    "preferredContentMode": "mobile",
    "backgroundColor": "#1a1a1a",
    "allowsLinkPreview": true,
    "scrollEnabled": true
  },
  "android": {
    "backgroundColor": "#1a1a1a",
    "allowMixedContent": false,
    "captureInput": true,
    "webContentsDebuggingEnabled": false,
    "buildOptions": {
      "releaseType": "APK"
    }
  },
  "plugins": {
    "SplashScreen": {
      "launchShowDuration": 2000,
      "launchAutoHide": true,
      "launchFadeOutDuration": 500,
      "backgroundColor": "#1a1a1a",
      "androidSplashResourceName": "splash",
      "androidScaleType": "CENTER_CROP",
      "showSpinner": true,
      "iosSpinnerStyle": "large",
      "spinnerColor": "#ff6b35",
      "splashFullScreen": true,
      "splashImmersive": true
    },
    "StatusBar": {
      "style": "Dark",
      "backgroundColor": "#1a1a1a",
      "overlaysWebView": false
    },
    "Haptics": {
      "enabled": true
    },
    "App": {
      "allowNavigation": []
    }
  }
}
